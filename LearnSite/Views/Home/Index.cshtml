@model IEnumerable<LearnSite.Models.Course>
@{
    ViewData["Title"] = "Home Page";
}

<hr />

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Trending Albums</h2>
            <div class="actions panel_actions pull-right">
                <a class="box_toggle fa fa-chevron-down"></a>
                <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                <a class="box_close fa fa-times"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-md-12">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-2 col-sm-4 col-xs-6">
                            <div class="card" style="width: 18rem;">
                                <img class="img-responsive" src="../data/albums/album-1.jpg" alt="Card image cap">
                                <h5 class="card-title">@item.CourseName</h5>
                                @*<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>*@
                                <input type="button" class="btn btn-link" value="@item.CourseName" />
                                
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>
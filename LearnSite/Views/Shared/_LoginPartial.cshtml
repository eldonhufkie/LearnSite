@using Microsoft.AspNetCore.Identity
@using LearnSite.Models
@model IEnumerable<LearnSite.Models.Course>
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            @*<li class="dropdown">
                    <a asp-area="" class="nav-link" asp-controller="Course" asp-action="MyCourses">My Courses</a>
                    <ul class="dropdown-menu">
                            <li><a asp-controller="Course" asp-action="Details">Test</a></li>
                    </ul>
                </li>*@
            <li class="dropdown">
                <a data-toggle="dropdown" class="dropdown-toggle" href="#">My Courses <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    @foreach (var item in Model)
                    {
                        <li>
                            <a asp-area="" asp-controller="Course" asp-action="Index">@item.CourseName</a>
                        </li>
                    }
                </ul>
            </li>

            <li><a asp-area="" class="nav-link" asp-controller="Course" asp-action="Create">Create a Course</a></li>
            <li class="dropdown">
                <a data-toggle="dropdown" class="dropdown-toggle" href="#">My Account <span class="glyphicon glyphicon-user"></span> <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li>
                        <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
                        <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
                    </li>
                </ul>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" class="nav-link" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
